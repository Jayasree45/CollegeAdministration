@model CollegeAdministration.Models.Student
@{
    ViewBag.Title = "EditStudentAttendance";
    Layout = "~/Views/Shared/_StaffLayoutPage1.cshtml";
}
@using (Html.BeginForm("EditStudentAttendance", "Staffs"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
